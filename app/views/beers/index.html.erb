<section class='container'>
  <div class='sixteen columns'>
    <h1>Listing beers</h1>
    <% if can? :manage, Beer %>
    <%= link_to 'New Beer', new_beer_path %>
    <% end %>
    <br>
    <br>
    <br>
  <div class="beer_index">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Image url</th>
          <th>Price</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @beers.each do |beer| %>
        <tr>
          <td><%= beer.title %></td>
          <td><%= beer.description %></td>
          <td class="beer_img"><%= image_tag(beer.image_url) %></td>
          <td><%= beer.price %></td>
          <td><%= link_to 'Show', beer %></td>
          <% if can? :manage, Beer %>
          <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
          <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div<
    <br>
  </div>
</section>