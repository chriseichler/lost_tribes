.container
  .sixteen.columns{style: "margin: 40px 0 0 20px"}
    %h2{style: "margin-left: 25px"} Your Shipping Info:
    %br
    = form_for @user do |f|
      .eight.columns{style: "border: 3px black solid; border-radius: 7px; padding: 17px 0px 7px 20px"}
        .four.columns
          = f.text_field :street_address1, placeholder: "Address"
          = f.text_field :street_address2, placeholder: "Address 2"
          = f.text_field :city, placeholder: "City"
          = f.text_field :state, placeholder: "State"
          = f.text_field :zip_code, placeholder: "Zip Code"
        .three.columns
          = f.text_field :name, placeholder: "Name"
          = f.email_field :email, placeholder: "Email"
          = f.text_field :phone, placeholder: "Phone"
          %br
          %br
          = f.submit "Update Address"
          %br 
        .four.columns
          %h2
            = link_to "Checkout", billing_carts_path

