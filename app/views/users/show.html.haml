%h2
  Hi, #{@user.name.capitalize}! 
  %h4
    =link_to 'Edit', edit_user_registration_path(@user)
    Your Info

%br
%br
- if can? :create, Event
  %h1 Event's You're Hosting

  %br 

  - @user.created_events.each do |event|
    %h3
      = event.title
    = event.description
    %br
    = "#{event.street} #{event.street2}, #{event.city}, #{event.state} #{event.zip}"
    %br
    = "Begins at #{event.start_time.to_s.humanize} on #{event.start_date}"
    %br
    = "Ends on #{event.end_date.to_s.humanize} at #{event.end_time}"
    %br
    = link_to "Edit", edit_event_path(event)
    = link_to("Delete", event_path(event), :data => { :confirm => "Are you sure you want to delete #{event.title}?" },method: :delete)
    %br
    %br
    %br

