- if can? :create, Event
  %h3 Events You're Hosting
  %br
  - if current_user.created_events.length == 0
    You don't have any upcoming events scheduled. Set up one
    = link_to "here!", new_event_path
  - else
    - current_user.created_events.each do |event|
      %div.created
        %h4
        .title= event.title
        .location= "#{event.street} #{event.street2}, #{event.city}, #{event.state} #{event.zip}"
        .start= "Begins at #{event.start_time.to_s.humanize} on #{event.start_date}"
        .date= "Ends on #{event.end_date.to_s.humanize} at #{event.end_time}"
        = link_to "Event Page", event_path(event)
        = link_to "Edit", edit_event_path(event)
        = link_to("Delete", event_path(event), method: :delete, data: { confirm: "Are you sure you want to delete #{event.title}?" })
