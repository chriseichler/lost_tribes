.container
  .fourteen.columns
    %h1{style: "text-align: center; margin-bottom: 40px"}
      Users
    %table
      %thead
        %tr.user-table
          %th Name
          %th Email
          %th Phone Number
          %th Address
          %th Address 2
          %th City
          %th State
          %th Zip
          %th Show
          %th Edit
          %th Delete
      %tbody
        - @users.each do |user|
          %tr.user-table{:'data-user-id' => user.id}
            %td
              = user.name
            %td
              = user.email
            %td
              = user.phone
            %td
              = user.street_address1
            %td
              = user.street_address2
            %td
              = user.city
            %td
              = user.state
            %td
              = user.zip_code
            %td 
              = link_to 'Show', user_path(user)
            %td
              = link_to 'Edit', "#", class: "edit-user-button"
            %td
              = link_to("Delete", user_path(user), method: :delete, confirm: "Are you sure you want to delete this user?")
            
= javascript_include_tag 'users'