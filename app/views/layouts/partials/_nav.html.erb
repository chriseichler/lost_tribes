<div class="nav-out">
  <ul class="nav-list">

    <li><a href="/">HOME</a></li>  
    <li><a href="/store/index">SHOP</a></li>
    <li><a href="/beers">BEER</a></li> 
    <li><a href="/events">EVENTS</a></li> 

    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <li><a href="/users">USERS</a></li>
        <li><a href="/carts">CARTS</a></li>
        <li><a href="/tickets">TICKETS</a></li>
      <% end %>  
      <li>
        <a href="/users/#{current_user.id}">MY INFO</a>
          <ul>
            <li><%= link_to "#{current_user.name.upcase}", user_path(current_user) %></li>
            <li><a href="/users/#{current_user.id}/edit">EDIT</a></li>
            <li><a href="/carts/<%=current_cart.id%>">CART</a></li>
          </ul>
      </li> 

    <% else %> 
      <li><a href="users/sign_up">SIGN UP</a></li>
    <% end %>

    <%= render 'devise/menu/login_items' %>
  </ul>
</div>

<script type="text/javascript">
  $(document).ready(function(){

      $("<select />").prependTo(".nav-out")

      $("<option />", {
        "selected": "selected",
        "value"   : "",
        "text"    : "Go to..."
      }).appendTo(".nav-out select");

      $(".nav-list li a").each(function() {
        var el = $(this);
        $("<option />", {
          "value" : el.attr("href"),
          "text"  : el.text()
        }).appendTo(".nav-out select");
      })

  })
</script>