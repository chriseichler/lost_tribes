<nav class="nav-out">
  <div class="container">
    <div class="sixteen columns">
      <ul class="nav-list">

        <li><a href="/">HOME</a></li>  
        <li><a href="/store/index">SHOP</a></li>
        <li><a href="/beers">BEER</a></li> 
        <li><a href="/events">EVENTS</a></li> 

        <% if user_signed_in? %>
          <li id="nav-right"><%= link_to "LOG OUT", destroy_user_session_path, method: :delete %></li>
          <li id="nav-right"><%= link_to "#{current_user.name.upcase}", user_path(current_user) %>
            <ul id="nav-right">
              <li><%= link_to "VIEW", user_path(current_user) %></li>
              <li><%= link_to "EDIT", edit_user_path(current_user) %></li>
              <li><a href="/carts/<%=current_cart.id%>">CART</a></li>
            </ul>
          </li>
          <% if current_user.admin? %>
            <li id="nav-right"><a href="/users">USERS</a></li>
            <li id="nav-right"><a href="/carts">CARTS</a></li>
            <li id="nav-right" style="border-left: 1px solid gray"><a href="/orders/carts/ticket">TICKETS</a></li>
          <% end %>  
        <% else %> 
          <li id="nav-right"><%= link_to "SIGN IN", new_user_session_path %></li>
          <li id="nav-right" style="border-left: 1px solid gray"><a href="/users/sign_up">SIGN UP</a></li>
        <% end %>

       
      </ul>
    </div>
  </div>
</nav>


<script type="text/javascript">
  $(document).ready(function(){

      // when the doc is done loading, add a select bar to the nav bar
      $("<select />").prependTo(".nav-out")

      // Sets the default on the select bar
      $("<option />", {
        "selected": "selected",
        "value"   : "",
        "text"    : "Go to..."
      }).appendTo(".nav-out select");

      // for each link on the original nav bar, add that identical link to the select bar
      $(".nav-list li a").each(function() {
        var el = $(this);
        $("<option />", {
          "value" : el.attr("href"),
          "text"  : el.text()
        }).appendTo(".nav-out select");
      })

      // when a link is clicked in the select bar, go to that page
      $('.nav-out select').change(function() {
        window.location = $(this).find("option:selected").val();
      })
  })
</script>